{
  "include": ["./src/**/*", "__test__/index.test.js"],
  "exclude": ["./dist", "./node_modules/**"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ES6", "dom", "ES2017"],
    "esModuleInterop": true
  }
}
